{
  "openapi": "3.0.3",
  "info": {
    "title": "Lab Management API",
    "version": "1.0.0",
    "description": "Comprehensive API for Lab Management (MSU FoTE · MCA) — authentication, labs, attendance, submissions, grading, notifications, reports, and settings."
  },
  "servers": [
    { "url": "https://yourdomain.com", "description": "Production" },
    { "url": "https://localhost:5036", "description": "Local (HTTPS)" },
    { "url": "http://localhost:5036", "description": "Local (HTTP)" }
  ],
  "components": {
    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "JWT token in Authorization header: Bearer {token}"
      }
    },
    "schemas": {
      "RegisterDto": {
        "type": "object",
        "required": ["name", "email", "password", "role"],
        "properties": {
          "name": { "type": "string", "example": "Alice Teacher" },
          "email": { "type": "string", "format": "email", "example": "alice@msu.edu" },
          "password": { "type": "string", "format": "password", "example": "StrongPass123!" },
          "role": { "type": "string", "enum": ["Student", "Teacher"], "example": "Teacher" }
        }
      },
      "LoginDto": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": { "type": "string", "format": "email", "example": "alice@msu.edu" },
          "password": { "type": "string", "format": "password", "example": "StrongPass123!" }
        }
      },
      "AuthResponseDto": {
        "type": "object",
        "properties": {
          "token": { "type": "string" },
          "userId": { "type": "string" },
          "role": { "type": "string" },
          "name": { "type": "string" },
          "email": { "type": "string" }
        }
      },
      "UserDto": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "email": { "type": "string" },
          "role": { "type": "string" },
          "department": { "type": "string" },
          "subjectIds": { "type": "array", "items": { "type": "string" } },
          "contactNumber": { "type": "string", "nullable": true },
          "bio": { "type": "string", "nullable": true }
        }
      },
      "SubjectDto": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "code": { "type": "string" }
        }
      },
      "CreateLabDto": {
        "type": "object",
        "required": ["subjectId", "startTime", "endTime", "submissionDeadline"],
        "properties": {
          "subjectId": { "type": "string" },
          "startTime": { "type": "string", "format": "date-time" },
          "endTime": { "type": "string", "format": "date-time" },
          "submissionDeadline": { "type": "string", "format": "date-time" }
        }
      },
      "LabDto": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "subjectId": { "type": "string" },
          "teacherId": { "type": "string" },
          "startTime": { "type": "string", "format": "date-time" },
          "endTime": { "type": "string", "format": "date-time" },
          "submissionDeadline": { "type": "string", "format": "date-time" },
          "notificationSent": { "type": "boolean" },
          "subject": { "$ref": "#/components/schemas/SubjectDto" },
          "teacher": { "$ref": "#/components/schemas/UserDto" }
        }
      },
      "ClockInDto": { "type": "object", "required": ["labId"], "properties": { "labId": { "type": "string" } } },
      "ClockOutDto": { "type": "object", "required": ["labId"], "properties": { "labId": { "type": "string" } } },
      "AttendanceDto": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "labId": { "type": "string" },
          "studentId": { "type": "string" },
          "clockInTime": { "type": "string", "format": "date-time", "nullable": true },
          "clockOutTime": { "type": "string", "format": "date-time", "nullable": true },
          "status": { "type": "string", "enum": ["Present", "Absent", "Late"] },
          "attendanceTick": { "type": "boolean" }
        }
      },
      "SubmissionDto": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "labId": { "type": "string" },
          "studentId": { "type": "string" },
          "fileUrl": { "type": "string" },
          "fileName": { "type": "string" },
          "fileSize": { "type": "integer" },
          "submittedAt": { "type": "string", "format": "date-time" },
          "feedback": { "type": "string", "nullable": true },
          "marks": { "type": "integer", "nullable": true },
          "maxMarks": { "type": "integer", "nullable": true }
        }
      },
      "Notification": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "userId": { "type": "string", "nullable": true },
          "entityType": { "type": "string" },
          "entityId": { "type": "string" },
          "title": { "type": "string" },
          "message": { "type": "string" },
          "priority": { "type": "integer" },
          "read": { "type": "boolean" },
          "createdAt": { "type": "string", "format": "date-time" }
        }
      },
      "NotificationPreferences": {
        "type": "object",
        "properties": {
          "email": { "type": "boolean" },
          "push": { "type": "boolean" },
          "inApp": { "type": "boolean" }
        }
      },
      "TeacherDashboardDto": {
        "type": "object",
        "properties": {
          "pendingSubmissions": { "type": "integer" },
          "labs": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": { "type": "string" },
                "subjectId": { "type": "string" },
                "startTime": { "type": "string", "format": "date-time" },
                "pendingCount": { "type": "integer" }
              }
            }
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "message": { "type": "string" },
          "details": { "type": "string", "nullable": true },
          "timestamp": { "type": "string", "format": "date-time" }
        }
      }
    }
  },
  "security": [{ "Bearer": [] }],
  "paths": {
    "/api/auth/register": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Register new user",
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "$ref": "#/components/schemas/RegisterDto" } } } },
        "responses": {
          "200": { "description": "Registered", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/AuthResponseDto" } } } },
          "400": { "description": "Bad request", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/ErrorResponse" } } } }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Login and get JWT",
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "$ref": "#/components/schemas/LoginDto" } } } },
        "responses": {
          "200": { "description": "Logged in", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/AuthResponseDto" } } } },
          "401": { "description": "Unauthorized", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/ErrorResponse" } } } }
        }
      }
    },

    "/api/users/me": {
      "get": {
        "tags": ["Users"],
        "summary": "Get current user",
        "security": [{ "Bearer": [] }],
        "responses": { "200": { "description": "Profile", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/UserDto" } } } } }
      },
      "put": {
        "tags": ["Users"],
        "summary": "Update current user profile",
        "security": [{ "Bearer": [] }],
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "type": "object", "properties": { "name": { "type": "string" }, "department": { "type": "string" }, "contactNumber": { "type": "string" }, "bio": { "type": "string" } } } } } },
        "responses": {
          "200": { "description": "Updated", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/UserDto" } } } },
          "400": { "description": "Bad request" }
        }
      }
    },

    "/api/users": {
      "get": {
        "tags": ["Users"],
        "summary": "List all users (Teacher only)",
        "security": [{ "Bearer": [] }],
        "responses": { "200": { "description": "Users", "content": { "application/json": { "schema": { "type": "array", "items": { "$ref": "#/components/schemas/UserDto" } } } } } }
      }
    },

    "/api/subjects": {
      "get": {
        "tags": ["Subjects"],
        "summary": "Get all subjects",
        "security": [{ "Bearer": [] }],
        "responses": { "200": { "description": "Subjects", "content": { "application/json": { "schema": { "type": "array", "items": { "$ref": "#/components/schemas/SubjectDto" } } } } } }
      }
    },

    "/api/labs": {
      "get": {
        "tags": ["Labs"],
        "summary": "List aggregated labs",
        "security": [{ "Bearer": [] }],
        "responses": { "200": { "description": "Labs", "content": { "application/json": { "schema": { "type": "array", "items": { "$ref": "#/components/schemas/LabDto" } } } } } }
      },
      "post": {
        "tags": ["Labs"],
        "summary": "Create lab (Teacher only)",
        "security": [{ "Bearer": [] }],
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "$ref": "#/components/schemas/CreateLabDto" } } } },
        "responses": {
          "201": { "description": "Created lab", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/LabDto" } } } },
          "400": { "description": "Validation failed" }
        }
      }
    },

    "/api/labs/{id}": {
      "get": {
        "tags": ["Labs"],
        "summary": "Get lab details",
        "security": [{ "Bearer": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }],
        "responses": {
          "200": { "description": "Lab", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/LabDto" } } } },
          "404": { "description": "Not found" }
        }
      }
    },

    "/api/attendance/clockin": {
      "post": {
        "tags": ["Attendance"],
        "summary": "Clock in (Student)",
        "security": [{ "Bearer": [] }],
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "$ref": "#/components/schemas/ClockInDto" } } } },
        "responses": {
          "200": { "description": "Clocked in", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/AttendanceDto" } } } },
          "400": { "description": "Invalid" }
        }
      }
    },

    "/api/attendance/clockout": {
      "post": {
        "tags": ["Attendance"],
        "summary": "Clock out (Student)",
        "security": [{ "Bearer": [] }],
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "$ref": "#/components/schemas/ClockOutDto" } } } },
        "responses": {
          "200": { "description": "Clocked out", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/AttendanceDto" } } } }
        }
      }
    },

    "/api/attendance/report/{labId}": {
      "get": {
        "tags": ["Attendance"],
        "summary": "Get attendance report for a lab (Teacher)",
        "security": [{ "Bearer": [] }],
        "parameters": [
          { "name": "labId", "in": "path", "required": true, "schema": { "type": "string" } },
          { "name": "format", "in": "query", "required": false, "schema": { "type": "string", "enum": ["json","csv","pdf"], "default": "json" }, "description": "Optional export format" }
        ],
        "responses": {
          "200": { "description": "Report (JSON or file)", "content": { "application/json": { "schema": { "type": "object" } } } }
        }
      }
    },

    "/api/submissions": {
      "post": {
        "tags": ["Submissions"],
        "summary": "Upload submission (Student)",
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "required": ["file", "labId"],
                "properties": { "file": { "type": "string", "format": "binary" }, "labId": { "type": "string" } }
              }
            }
          }
        },
        "responses": { "200": { "description": "Uploaded", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/SubmissionDto" } } } } }
      }
    },

    "/api/submissions/lab/{labId}": {
      "get": {
        "tags": ["Submissions"],
        "summary": "List submissions for a lab (Teacher)",
        "security": [{ "Bearer": [] }],
        "parameters": [{ "name": "labId", "in": "path", "required": true, "schema": { "type": "string" } }],
        "responses": {
          "200": { "description": "Array of submissions", "content": { "application/json": { "schema": { "type": "array", "items": { "$ref": "#/components/schemas/SubmissionDto" } } } } }
        }
      }
    },

    "/api/submissions/student/{studentId}": {
      "get": {
        "tags": ["Submissions"],
        "summary": "Get submissions by student (Teacher or student self)",
        "security": [{ "Bearer": [] }],
        "parameters": [{ "name": "studentId", "in": "path", "required": true, "schema": { "type": "string" } }],
        "responses": { "200": { "description": "Submissions", "content": { "application/json": { "schema": { "type": "array", "items": { "$ref": "#/components/schemas/SubmissionDto" } } } } } }
      }
    },

    "/api/submissions/my": {
      "get": {
        "tags": ["Submissions"],
        "summary": "Get current user's submission for a lab",
        "security": [{ "Bearer": [] }],
        "parameters": [{ "name": "labId", "in": "query", "required": true, "schema": { "type": "string" } }],
        "responses": { "200": { "description": "Submission", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/SubmissionDto" } } } }, "404": { "description": "Not found" } }
      }
    },

    "/api/submissions/{submissionId}/grade": {
      "post": {
        "tags": ["Submissions"],
        "summary": "Grade submission (Teacher only)",
        "security": [{ "Bearer": [] }],
        "parameters": [{ "name": "submissionId", "in": "path", "required": true, "schema": { "type": "string" } }],
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "type": "object", "properties": { "marks": { "type": "integer", "nullable": true }, "maxMarks": { "type": "integer" }, "feedback": { "type": "string" } } } } } },
        "responses": { "200": { "description": "Graded", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/SubmissionDto" } } } } }
      }
    },

    "/api/submissions/{id}/download": {
      "get": {
        "tags": ["Submissions"],
        "summary": "Download submission file",
        "security": [{ "Bearer": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }],
        "responses": { "200": { "description": "Binary file", "content": { "application/octet-stream": { "schema": { "type": "string", "format": "binary" } } } } }
      }
    },

    "/api/notifications": {
      "get": {
        "tags": ["Notifications"],
        "summary": "List notifications for current user (includes broadcast)",
        "security": [{ "Bearer": [] }],
        "responses": { "200": { "description": "Notifications", "content": { "application/json": { "schema": { "type": "array", "items": { "$ref": "#/components/schemas/Notification" } } } } } }
      }
    },

    "/api/notifications/all": {
      "get": {
        "tags": ["Notifications"],
        "summary": "Paged notifications (admin or UI list)",
        "security": [{ "Bearer": [] }],
        "parameters": [{ "name": "page", "in": "query", "schema": { "type": "integer", "default": 1 } }, { "name": "pageSize", "in": "query", "schema": { "type": "integer", "default": 20 } }],
        "responses": { "200": { "description": "Paged notifications", "content": { "application/json": { "schema": { "type": "object", "properties": { "items": { "type": "array", "items": { "$ref": "#/components/schemas/Notification" } }, "total": { "type": "integer" } } } } } } }
      }
    },

    "/api/notifications/{id}/read": {
      "post": { "tags": ["Notifications"], "summary": "Mark notification read", "security": [{ "Bearer": [] }], "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }], "responses": { "204": { "description": "No Content" } } }
    },

    "/api/notifications/read-all": {
      "post": { "tags": ["Notifications"], "summary": "Mark all notifications read", "security": [{ "Bearer": [] }], "responses": { "204": { "description": "No Content" } } }
    },

    "/api/notifications/{id}": {
      "delete": { "tags": ["Notifications"], "summary": "Delete notification", "security": [{ "Bearer": [] }], "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }], "responses": { "204": { "description": "Deleted" } } }
    },

    "/api/notification-preferences": {
      "get": { "tags": ["Notifications"], "summary": "Get notification preferences", "security": [{ "Bearer": [] }], "responses": { "200": { "description": "Preferences", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/NotificationPreferences" } } } } } },
      "put": { "tags": ["Notifications"], "summary": "Update notification preferences", "security": [{ "Bearer": [] }], "requestBody": { "required": true, "content": { "application/json": { "schema": { "$ref": "#/components/schemas/NotificationPreferences" } } } }, "responses": { "200": { "description": "Updated" } } }
    },

    "/api/reports/teacher/dashboard": {
      "get": {
        "tags": ["Reports"],
        "summary": "Teacher dashboard summary",
        "security": [{ "Bearer": [] }],
        "responses": { "200": { "description": "Summary", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/TeacherDashboardDto" } } } } }
      }
    },

    "/api/settings": {
      "get": { "tags": ["Settings"], "summary": "Get settings", "security": [{ "Bearer": [] }], "responses": { "200": { "description": "Settings JSON" } } },
      "put": { "tags": ["Settings"], "summary": "Update settings", "security": [{ "Bearer": [] }], "responses": { "200": { "description": "Updated" } } }
    }
  },
  "tags": [
    { "name": "Authentication" },
    { "name": "Users" },
    { "name": "Subjects" },
    { "name": "Labs" },
    { "name": "Attendance" },
    { "name": "Submissions" },
    { "name": "Notifications" },
    { "name": "Reports" },
    { "name": "Settings" }
  ]
}